{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  },
  "include": ["./src", "vite.config.ts", "./server", "jest.config.js"],
  "exclude": ["**/node_modules/**/*", "node_modules/**/*", "../node_modules/**/*"]
}
